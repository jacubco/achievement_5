<section id="contact" class="content">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
    		<p id="notice"><%= notice %></p>

    		<p>
    		  <strong>First name:</strong>
    		  <%= @user.first_name %>
    		</p>

    		<p>
    		  <strong>Last name:</strong>
    		  <%= @user.last_name %>
    		</p>
        
        <div class="custom-link">
      		<%= link_to 'Edit', edit_user_path(@user) %> |
      		<%= link_to 'Back', users_path %>
        </div>
      </div>
    </div>
  </div>
</section>
