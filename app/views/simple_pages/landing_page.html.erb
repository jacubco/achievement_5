<section id="slides">
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @products.each do |product| %>
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="<%= "active" if product == @products.first %>"></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    
    <!-- Products is limited to the first three items (in simple_pages_controller) -->
    <% @products.each do |product| %>
      <div class="carousel-item<%= " active" if product == @products.first %>">    
        <%= image_tag(product.image_url, class: "img-fluid") %>

        <!-- Carousel captions -->
        <div class="carousel-caption d-none d-md-block">
          <%= product.name %>
        </div>
      </div>
    <% end %>
  </div>
</div></section>

  <!-- Carousel controls -->
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


