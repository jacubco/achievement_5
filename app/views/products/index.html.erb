<section id="products" class="content">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <p id="notice"><%= notice %></p>
        <h1>Products</h1>
      </div>
    </div>

    <div  class="row">
      <% @products.each do |product| %>
      <!-- Render with passing local variables -->
      <%= render partial: "product", locals: {product: product} %>
      <% end %>

    </div>
  </div>
</section>