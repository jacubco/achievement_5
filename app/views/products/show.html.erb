<section class="content">
  <div class="container">
    <div class="row">
      <div class="col-md-4">

    		<p id="notice"><%= notice %></p>

    		<p>
    		  <strong>Name:</strong>
    		  <%= @product.name %>
    		</p>

    		<p>
    		  <strong>Description:</strong>
    		  <%= @product.description %>
    		</p>

    		<p>
    		  <strong>Image url:</strong>
    		  <%= @product.image_url %>
    		</p>

    		<%= link_to 'Edit', edit_product_path(@product) %> |
    		<%= link_to 'Back', products_path %>
      </div>
    </div>
  </div>
</section>
