<% if signed_in? %>
  <hr>
  <h4>Add a review:</h4>


  <%= form_for([@product, @product.comments.build]) do |f| %>

  <div class="form-group">
    <div class="field">
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="field">
      <div class="rating"></div>
    </div>
    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-outline-success my-2 my-sm-0" %>
    </div>
  </div>
  <% end %>
<% end %>