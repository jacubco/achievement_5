// Hide review form and display thank you message
$("#new_comment").hide();
$("#sw").html("Thank you for your review!");

// Add new comment to comments
$('.product-reviews').prepend("<%= j render @comment %>");

// Refresh average, highest and lowest rating
$("#average-rating").attr('data-score', "<%= @product.average_rating %>");

$("#highest-rating").attr('data-score', "<%= @product.highest_rating_comment.rating %>");
$("#highest-rating-user").html("<%= @product.highest_rating_comment.user.first_name %> says:");
$("#highest-rating-comment").html("<%= @product.highest_rating_comment.body %>");

$("#lowest-rating").attr('data-score', "<%= @product.lowest_rating_comment.rating %>");
$("#lowest-rating-user").html("<%= @product.lowest_rating_comment.user.first_name %> says:");
$("#lowest-rating-comment").html("<%= @product.lowest_rating_comment.body %>");

